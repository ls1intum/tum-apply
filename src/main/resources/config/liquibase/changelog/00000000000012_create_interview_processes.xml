<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="create_interview_processes_table" author="abinayasivaguru">
    <createTable tableName="interview_processes">
      <!-- Primary Key -->
      <column name="id" type="CHAR(36)">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <!-- Foreign Key to Job -->
      <column name="job_id" type="CHAR(36)">
        <constraints nullable="false" unique="true"/>
      </column>

      <!-- Audit Fields -->
      <column name="created_at" type="DATETIME(3)" defaultValueComputed="CURRENT_TIMESTAMP(3)">
        <constraints nullable="false"/>
      </column>

      <column name="last_modified_at" type="DATETIME(3)" defaultValueComputed="CURRENT_TIMESTAMP(3)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <!-- Foreign Key Constraint -->
    <addForeignKeyConstraint
      baseTableName="interview_processes"
      baseColumnNames="job_id"
      referencedTableName="jobs"
      referencedColumnNames="job_id"
      constraintName="fk_interview_processes_job"
      onDelete="CASCADE"/>

    <!-- Index for performance on job_id lookups -->
    <createIndex indexName="idx_interview_processes_job" tableName="interview_processes">
      <column name="job_id"/>
    </createIndex>

    <!-- Auto-update last_modified_at on row update (MySQL/MariaDB) -->
    <sql>
      ALTER TABLE interview_processes
        MODIFY last_modified_at DATETIME(3) NOT NULL
        DEFAULT CURRENT_TIMESTAMP(3) ON UPDATE CURRENT_TIMESTAMP(3);
    </sql>

  </changeSet>
</databaseChangeLog>
