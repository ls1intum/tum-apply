<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="015_create_schools_table" author="bofan">
    <!-- Create schools table -->
    <createTable tableName="schools">
      <column name="school_id" type="CHAR(36)">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="name" type="VARCHAR(200)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="abbreviation" type="VARCHAR(20)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="DATETIME(3)" defaultValueComputed="CURRENT_TIMESTAMP(3)">
        <constraints nullable="false"/>
      </column>
      <column name="last_modified_at" type="DATETIME(3)" defaultValueComputed="CURRENT_TIMESTAMP(3)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <sql>
      ALTER TABLE schools MODIFY last_modified_at DATETIME(3) NOT NULL DEFAULT CURRENT_TIMESTAMP(3) ON UPDATE CURRENT_TIMESTAMP(3);
    </sql>

    <createIndex indexName="idx_schools_name" tableName="schools">
      <column name="name"/>
    </createIndex>
  </changeSet>

  <changeSet id="016_create_departments_table" author="bofan">
    <!-- Create departments table -->
    <createTable tableName="departments">
      <column name="department_id" type="CHAR(36)">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="name" type="VARCHAR(200)">
        <constraints nullable="false"/>
      </column>
      <column name="school_id" type="CHAR(36)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="DATETIME(3)" defaultValueComputed="CURRENT_TIMESTAMP(3)">
        <constraints nullable="false"/>
      </column>
      <column name="last_modified_at" type="DATETIME(3)" defaultValueComputed="CURRENT_TIMESTAMP(3)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <sql>
      ALTER TABLE departments MODIFY last_modified_at DATETIME(3) NOT NULL DEFAULT CURRENT_TIMESTAMP(3) ON UPDATE CURRENT_TIMESTAMP(3);
    </sql>

    <!-- Add foreign key constraint from departments to schools -->
    <addForeignKeyConstraint baseTableName="departments"
                             baseColumnNames="school_id"
                             constraintName="fk_departments_school"
                             referencedTableName="schools"
                             referencedColumnNames="school_id"
                             onDelete="CASCADE"/>

    <!-- Add unique constraint: department name must be unique within a school -->
    <addUniqueConstraint
      tableName="departments"
      columnNames="school_id, name"
      constraintName="uc_department_name_per_school"/>

    <createIndex indexName="idx_departments_school_id" tableName="departments">
      <column name="school_id"/>
    </createIndex>
  </changeSet>

  <changeSet id="017_alter_research_groups_add_department_fk" author="bofan">
    <!-- Add department foreign key column to research_groups -->
    <addColumn tableName="research_groups">
      <column name="department_id" type="CHAR(36)">
        <constraints nullable="true"/>
      </column>
    </addColumn>

    <!-- Add foreign key constraint -->
    <addForeignKeyConstraint baseTableName="research_groups"
                             baseColumnNames="department_id"
                             constraintName="fk_research_groups_department"
                             referencedTableName="departments"
                             referencedColumnNames="department_id"
                             onDelete="SET NULL"/>

    <createIndex indexName="idx_research_groups_department_id" tableName="research_groups">
      <column name="department_id"/>
    </createIndex>

    <!-- Drop the old school text column -->
    <dropColumn tableName="research_groups" columnName="school"/>
  </changeSet>

</databaseChangeLog>
