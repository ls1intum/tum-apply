<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="014-expand-master-grade" author="aniruddh">
    <preConditions onFail="MARK_RAN">
      <sqlCheck expectedResult="1">
        SELECT CASE
                 WHEN CHARACTER_MAXIMUM_LENGTH &lt; 11 THEN 1
                 ELSE 0
                 END
        FROM information_schema.COLUMNS
        WHERE TABLE_SCHEMA = DATABASE()
          AND TABLE_NAME = 'applicants'
          AND COLUMN_NAME = 'master_grade';
      </sqlCheck>
    </preConditions>

    <modifyDataType
      tableName="applicants"
      columnName="master_grade"
      newDataType="VARCHAR(50)"/>
  </changeSet>

  <changeSet id="015-expand-bachelor-grade" author="aniruddh">
    <preConditions onFail="MARK_RAN">
      <sqlCheck expectedResult="1">
        SELECT CASE
                 WHEN CHARACTER_MAXIMUM_LENGTH &lt; 11 THEN 1
                 ELSE 0
                 END
        FROM information_schema.COLUMNS
        WHERE TABLE_SCHEMA = DATABASE()
          AND TABLE_NAME = 'applicants'
          AND COLUMN_NAME = 'bachelor_grade';
      </sqlCheck>
    </preConditions>

    <modifyDataType
      tableName="applicants"
      columnName="bachelor_grade"
      newDataType="VARCHAR(50)"/>
  </changeSet>

</databaseChangeLog>
