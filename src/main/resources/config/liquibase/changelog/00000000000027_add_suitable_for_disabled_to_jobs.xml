<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="027_add_suitable_for_disabled_to_jobs" author="aniruddh">
    <comment>Add suitable_for_disabled column to jobs table for equal opportunities statement</comment>
    <addColumn tableName="jobs">
      <column name="suitable_for_disabled" type="BOOLEAN" defaultValueBoolean="false">
        <constraints nullable="true"/>
      </column>
    </addColumn>
  </changeSet>

</databaseChangeLog>
