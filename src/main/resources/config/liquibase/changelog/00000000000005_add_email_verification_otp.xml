<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <!-- Add table for otp email codes -->
  <changeSet id="020-add-email-verification-otp" author="marc-fett">
    <createTable tableName="email_verification_otp">
      <column name="id" type="VARCHAR(36)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="email" type="VARCHAR(320)">
        <constraints nullable="false"/>
      </column>
      <column name="code_hash" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="salt" type="VARCHAR(64)">
        <constraints nullable="false"/>
      </column>
      <column name="jti" type="VARCHAR(64)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="created_at" type="TIMESTAMP(3)" defaultValueComputed="CURRENT_TIMESTAMP(3)">
        <constraints nullable="false"/>
      </column>
      <column name="expires_at" type="TIMESTAMP(3)">
        <constraints nullable="false"/>
      </column>
      <column name="max_attempts" type="INT">
        <constraints nullable="false"/>
      </column>
      <column name="attempts" type="INT" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
      <column name="used" type="BOOLEAN" defaultValueBoolean="false">
        <constraints nullable="false"/>
      </column>
      <column name="ip_hash" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <!-- Index to support sorting recent OTPs per email (fallback ordering by created_at) -->
    <createIndex tableName="email_verification_otp" indexName="idx_evo_email_created">
      <column name="email"/>
      <column name="created_at"/>
    </createIndex>

    <!-- Unique index on jti to ensure single-use tokens and fast, deterministic lookups for replay/audit checks. -->
    <createIndex tableName="email_verification_otp" indexName="idx_evo_jti" unique="true">
      <column name="jti"/>
    </createIndex>

    <!-- Composite index (email, used, expires_at) to speed up fetching the newest active (non-used, non-expired) OTP. -->
    <createIndex tableName="email_verification_otp" indexName="idx_evo_email_used_expires">
      <column name="email"/>
      <column name="used"/>
      <column name="expires_at"/>
    </createIndex>

    <!-- Index on expires_at to make scheduled purges of expired OTPs efficient.
     Allows quick lookups for batch jobs or schedulers that delete all expired rows. -->
    <createIndex tableName="email_verification_otp" indexName="idx_evo_expires_at">
      <column name="expires_at"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
