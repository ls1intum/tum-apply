<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <!-- research_groups.university_id -->
  <changeSet id="rg-add-university_id" author="you">
    <preConditions onFail="MARK_RAN" onError="MARK_RAN">
      <not>
        <columnExists tableName="research_groups" columnName="university_id"/>
      </not>
    </preConditions>
    <addColumn tableName="research_groups">
      <column name="university_id" type="VARCHAR(64)"/>
    </addColumn>
  </changeSet>

  <!-- users.university_id -->
  <changeSet id="users-add-university_id" author="you">
    <preConditions onFail="MARK_RAN" onError="MARK_RAN">
      <not>
        <columnExists tableName="users" columnName="university_id"/>
      </not>
    </preConditions>
    <addColumn tableName="users">
      <column name="university_id" type="VARCHAR(64)"/>
    </addColumn>
  </changeSet>


  <changeSet id="users-ux-university_id" author="you">
    <preConditions onFail="MARK_RAN" onError="MARK_RAN">
      <and>
        <columnExists tableName="users" columnName="university_id"/>
        <not>
          <indexExists tableName="users" indexName="ux_users_university_id"/>
        </not>
      </and>
    </preConditions>
    <createIndex tableName="users" indexName="ux_users_university_id" unique="true">
      <column name="university_id"/>
    </createIndex>
  </changeSet>

</databaseChangeLog>
