<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <!-- Remove existing rating column from applications -->
  <changeSet id="018_remove-rating_from_application" author="moritz-schmidt">
    <dropColumn tableName="applications" columnName="rating"/>
  </changeSet>

  <!-- Create separate ratings table -->
  <changeSet id="019_create_ratings_table" author="moritz-schmidt">
    <createTable tableName="ratings">
      <column name="rating_id" type="CHAR(36)">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="application_id" type="CHAR(36)">
        <constraints nullable="false"/>
      </column>

      <column name="user_id" type="CHAR(36)">
        <constraints nullable="false"/>
      </column>

      <column name="rating" type="INT"/>

      <column name="created_at" type="DATETIME(3)" defaultValueComputed="CURRENT_TIMESTAMP(3)">
        <constraints nullable="false"/>
      </column>

      <column name="last_modified_at" type="DATETIME(3)" defaultValueComputed="CURRENT_TIMESTAMP(3)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <!-- Foreign keys -->
    <addForeignKeyConstraint
      baseTableName="ratings"
      baseColumnNames="application_id"
      referencedTableName="applications"
      referencedColumnNames="application_id"
      constraintName="fk_ratings_application"
      onDelete="CASCADE"/>

    <addForeignKeyConstraint
      baseTableName="ratings"
      baseColumnNames="user_id"
      referencedTableName="users"
      referencedColumnNames="user_id"
      constraintName="fk_ratings_user"
      onDelete="CASCADE"/>

    <!-- One rating per (application, user) -->
    <addUniqueConstraint
      tableName="ratings"
      columnNames="application_id, user_id"
      constraintName="uc_ratings_application_user"/>

    <!-- Helpful indexes -->
    <createIndex indexName="idx_ratings_application" tableName="ratings">
      <column name="application_id"/>
    </createIndex>
    <createIndex indexName="idx_ratings_user" tableName="ratings">
      <column name="user_id"/>
    </createIndex>

    <!-- Auto-update last_modified_at on row update (MySQL/MariaDB) -->
    <sql>
      ALTER TABLE ratings
        MODIFY last_modified_at DATETIME(3) NOT NULL
        DEFAULT CURRENT_TIMESTAMP(3) ON UPDATE CURRENT_TIMESTAMP(3);
    </sql>

  </changeSet>
</databaseChangeLog>
