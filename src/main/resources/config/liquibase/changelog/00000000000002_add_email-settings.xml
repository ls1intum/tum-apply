<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="015_create-email-settings" author="moritz-schmidt">
    <createTable tableName="email_settings">
      <column name="email_setting_id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="user_id" type="UUID">
        <constraints nullable="false"/>
      </column>

      <column name="email_type" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>

      <column name="enabled" type="BOOLEAN">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addUniqueConstraint
      tableName="email_settings"
      columnNames="user_id, email_type"
      constraintName="uk_email_setting_user_email_type"/>

    <addForeignKeyConstraint
      baseTableName="email_settings"
      baseColumnNames="user_id"
      constraintName="fk_email_setting_user"
      referencedTableName="users"
      referencedColumnNames="user_id"
      onDelete="CASCADE"/>
  </changeSet>
</databaseChangeLog>
