<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <!--
      Adds assessment columns to interviewees table.
      - rating: Integer score from -2 to 2 (Likert scale)
      - assessment_notes: Text field for professor's evaluation notes
  -->
  <changeSet id="023-add-assessment-to-interviewees" author="abinayasivaguru">
    <addColumn tableName="interviewees">
      <column name="rating" type="integer">
        <constraints nullable="true"/>
      </column>
      <column name="assessment_notes" type="text">
        <constraints nullable="true"/>
      </column>
    </addColumn>

    <rollback>
      <dropColumn tableName="interviewees" columnName="rating"/>
      <dropColumn tableName="interviewees" columnName="assessment_notes"/>
    </rollback>
  </changeSet>

</databaseChangeLog>
