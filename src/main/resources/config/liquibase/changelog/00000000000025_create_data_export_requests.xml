<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="025-create-data-export-requests" author="sehmuelwagner">
    <createTable tableName="data_export_requests">
      <column name="export_request_id" type="CHAR(36)">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="user_id" type="CHAR(36)">
        <constraints nullable="false"/>
      </column>
      <column name="status" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>
      <column name="ready_at" type="DATETIME(3)"/>
      <column name="download_token" type="VARCHAR(255)"/>
      <column name="expires_at" type="DATETIME(3)"/>
      <column name="last_requested_at" type="DATETIME(3)"/>
      <column name="file_path" type="TEXT"/>
      <column name="created_at" type="DATETIME(3)" defaultValueComputed="CURRENT_TIMESTAMP(3)">
        <constraints nullable="false"/>
      </column>
      <column name="last_modified_at" type="DATETIME(3)" defaultValueComputed="CURRENT_TIMESTAMP(3)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint baseTableName="data_export_requests"
                             baseColumnNames="user_id"
                             constraintName="fk_data_export_requests_user"
                             referencedTableName="users"
                             referencedColumnNames="user_id"/>

    <createIndex tableName="data_export_requests" indexName="idx_data_export_requests_user">
      <column name="user_id"/>
    </createIndex>

    <createIndex tableName="data_export_requests" indexName="idx_data_export_requests_status">
      <column name="status"/>
    </createIndex>

    <sql>
      ALTER TABLE data_export_requests MODIFY last_modified_at DATETIME(3) NOT NULL DEFAULT CURRENT_TIMESTAMP(3) ON UPDATE CURRENT_TIMESTAMP(3);
    </sql>
  </changeSet>

</databaseChangeLog>
