<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

<changeSet id="014_alter_jobs" author="ishani-budhwar">
  <!-- Make funding_type column nullable -->
  <dropNotNullConstraint tableName="jobs" columnName="funding_type" columnDataType="VARCHAR(255)"/>

  <!-- Add a new column called end_date -->
  <addColumn tableName="jobs">
    <column name="end_date" type="DATE"/>
  </addColumn>

  <!-- Make title column NOT NULL -->
  <addNotNullConstraint tableName="jobs" columnName="title" columnDataType="TEXT"/>
</changeSet>
</databaseChangeLog>
