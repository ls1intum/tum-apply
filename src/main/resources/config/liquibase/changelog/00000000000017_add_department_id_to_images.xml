<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="017_add_department_id_to_images" author="bofan">
    <!-- Add department_id column to images table for DEFAULT_JOB_BANNER images -->
    <addColumn tableName="images">
      <column name="department_id" type="CHAR(36)">
        <constraints nullable="true"/>
      </column>
    </addColumn>

    <!-- Add foreign key constraint from images to departments -->
    <addForeignKeyConstraint baseTableName="images"
                             baseColumnNames="department_id"
                             constraintName="fk_images_department"
                             referencedTableName="departments"
                             referencedColumnNames="department_id"
                             onDelete="CASCADE"/>

    <createIndex indexName="idx_images_department_id" tableName="images">
      <column name="department_id"/>
    </createIndex>

    <!-- Add CHECK constraints to ensure proper foreign key usage based on image_type -->
    <!-- JOB_BANNER must have research_group_id and not department_id -->
    <sql>
      ALTER TABLE images ADD CONSTRAINT chk_job_banner_association
      CHECK (image_type != 'JOB_BANNER' OR (research_group_id IS NOT NULL AND department_id IS NULL));
    </sql>

    <!-- DEFAULT_JOB_BANNER must have department_id and not research_group_id -->
    <sql>
      ALTER TABLE images ADD CONSTRAINT chk_default_job_banner_association
      CHECK (image_type != 'DEFAULT_JOB_BANNER' OR (department_id IS NOT NULL AND research_group_id IS NULL));
    </sql>

    <!-- PROFILE_PICTURE must have neither research_group_id nor department_id -->
    <sql>
      ALTER TABLE images ADD CONSTRAINT chk_profile_picture_association
      CHECK (image_type != 'PROFILE_PICTURE' OR (research_group_id IS NULL AND department_id IS NULL));
    </sql>
  </changeSet>

</databaseChangeLog>
