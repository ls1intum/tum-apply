{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "every weekend"
  ],
  "minimumReleaseAge": "3 days",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security fix",
      "dependencies",
      "ready for review"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "npm",
        "gradle",
        "maven",
        "github-actions"
      ],
      "labels": [
        "dependencies",
        "ready for review"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "ci: GitHub Actions",
      "automerge": true,
      "automergeType": "pr",
      "prPriority": 10
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "groupName": "vendor: Jackson FasterXML",
      "matchSourceUrlPrefixes": [
        "https://github.com/FasterXML/"
      ]
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "groupName": "vendor: Keycloak",
      "matchPackagePatterns": [
        "^org\\.keycloak:"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "vendor: PrimeTek / PrimeUIX",
      "matchPackageNames": [
        "primeng",
        "primeicons",
        "tailwindcss-primeui"
      ],
      "matchPackagePrefixes": [
        "@primeuix/"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "vendor: ngx-translate",
      "matchPackagePrefixes": [
        "@ngx-translate/"
      ]
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "groupName": "vendor: JHipster",
      "matchPackagePatterns": [
        "^tech\\.jhipster:"
      ]
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "groupName": "vendor: Caffeine",
      "matchPackagePatterns": [
        "^com\\.github\\.ben-manes\\.caffeine:"
      ]
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "groupName": "vendor: Lombok",
      "matchPackagePatterns": [
        "^org\\.projectlombok:lombok$"
      ]
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "groupName": "vendor: ArchUnit",
      "matchPackagePatterns": [
        "^com\\.tngtech\\.archunit:"
      ]
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "groupName": "vendor: Testcontainers",
      "matchPackagePatterns": [
        "^org\\.testcontainers:"
      ]
    }
  ]
}
