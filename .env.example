#################################
# üîê Keycloak Configuration
#################################
# Base URL of the Keycloak server used for authentication
KEYCLOAK_URL=http://localhost:9080/
# Keycloak realm used for login
KEYCLOAK_REALM=tumapply
# Client ID used by the client to authenticate with Keycloak
KEYCLOAK_CLIENT_ID=tumapply-client
# Admin username for Keycloak management
KEYCLOAK_ADMIN=admin
# Admin password for Keycloak management
KEYCLOAK_ADMIN_PASSWORD=admin
# Enables Keycloak-related debug logging (true/false)
KEYCLOAK_ENABLE_LOGGING=true
# Secret used by the server to authenticate securely with Keycloak
KEYCLOAK_SERVER_CLIENT_SECRET=tumapply-server-secret
# Client ID used by the server to authenticate with Keycloak
KEYCLOAK_SERVER_CLIENT_ID=tumapply-server-client

#################################
# üóÑÔ∏è MySQL Configuration
#################################
# Name of the MySQL database used by the application
MYSQL_DATABASE=tumapply
# MySQL root user's password (used for local development)
MYSQL_ROOT_PASSWORD=root

#################################
# ‚öôÔ∏è Spring Boot Configuration
#################################
# JDBC URL for the Spring Boot datasource connection
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/tumapply?useUnicode=true&characterEncoding=utf8&useSSL=false&createDatabaseIfNotExist=true&serverTimezone=UTC
# Username for connecting to the MySQL database
SPRING_DATASOURCE_USERNAME=root
# Password for connecting to the MySQL database
SPRING_DATASOURCE_PASSWORD=root
# JDBC URL used by Liquibase for database migrations
SPRING_LIQUIBASE_URL=jdbc:mysql://localhost:3306/tumapply?useUnicode=true&characterEncoding=utf8&useSSL=false&createDatabaseIfNotExist=true&serverTimezone=UTC
# Comma-separated list of Spring profiles to activate (e.g., dev, api-docs)
SPRING_PROFILES_ACTIVE=dev,api-docs

#################################
# üèó Build Metadata
#################################
# Application environment (e.g., test, production)
ENVIRONMENT=test
# Current application version (used for build metadata)
VERSION=0.1.1
# Enable or disable debug mode (true/false)
DEBUG=false

#################################
# üåê Emails
#################################
# Base URL of the client used in emails to generate links
AET_CLIENT_URL=http://localhost:4200
